# Environment Configuration Example

# Application Settings
APP_ENV=development
PROJECT_NAME="Web Assistant"
VERSION=1.0.0
DEBUG=true

# API Settings
API_V1_STR=/api/v1

# CORS Settings
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:8000"

# LangSmith Settings (Optional - for LLM observability)
LANGCHAIN_TRACING_V2=false  # Set to true to enable LangSmith tracing
LANGCHAIN_API_KEY="your-langsmith-api-key"
LANGCHAIN_PROJECT="langgraph-fastapi-template"
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# Sentry Settings (Optional - for error tracking and performance monitoring)
SENTRY_DSN=""  # Sentry Data Source Name from your Sentry project
SENTRY_ENVIRONMENT=""  # Defaults to APP_ENV if not set
SENTRY_ENABLED=true  # Set to false to disable Sentry
SENTRY_TRACES_SAMPLE_RATE=1.0  # 1.0 = 100% sampling (use 0.1 for production = 10%)
SENTRY_PROFILES_SAMPLE_RATE=1.0  # 1.0 = 100% sampling (use 0.1 for production = 10%)
SENTRY_SEND_DEFAULT_PII=false  # Set to true to send personally identifiable information
SENTRY_DEBUG=false  # Set to true to enable Sentry debug logging
SENTRY_MAX_BREADCRUMBS=100  # Maximum number of breadcrumbs to keep

# LLM Settings
OPENAI_API_KEY="your-llm-api-key" # e.g. OpenAI API key
DEFAULT_LLM_MODEL=gpt-4o-mini
DEFAULT_LLM_TEMPERATURE=0.2

# JWK Authentication Settings (External Auth Service)
AUTH_URL="https://your-auth-service.com"  # Base URL of your auth service with JWKS endpoint
JWT_ISSUER="https://your-auth-service.com"  # Comma-separated list of valid issuers
JWT_AUDIENCE="your-audience"  # Your service's audience identifier

# MongoDB Settings (for LangGraph checkpointing and mem0ai memory)
# Get your connection string from https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority

# Rate Limiting Settings
RATE_LIMIT_DEFAULT="1000 per day,200 per hour"
RATE_LIMIT_CHAT="100 per minute"
RATE_LIMIT_CHAT_STREAM="100 per minute"
RATE_LIMIT_MESSAGES="200 per minute"

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=console
